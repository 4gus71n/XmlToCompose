<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bottomSheetExampleSatelliteImgView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_baseline_satellite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheetExampleTerrainImgView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/bottomSheetExampleSatelliteImgView"
        app:layout_constraintEnd_toEndOf="@id/bottomSheetExampleSatelliteImgView"
        android:id="@+id/bottomSheetExampleSatelliteTxtView"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetExampleSatelliteImgView"
        android:text="Satellite"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/bottomSheetExampleTerrainImgView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_baseline_terrain_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheetExampleSatelliteImgView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintEnd_toEndOf="@id/bottomSheetExampleTerrainImgView"
        app:layout_constraintStart_toStartOf="@id/bottomSheetExampleTerrainImgView"
        android:id="@+id/bottomSheetExampleTerrainTextView"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetExampleSatelliteImgView"
        android:text="Terrain"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>